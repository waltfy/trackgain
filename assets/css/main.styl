//===================
//  Styles Index
//===================

//===================
//  Typograhpy
//===================
$type = 'Montserrat', helvetica, sans-serif;

//===================
//  Colors
//===================
$type_dark = hsl(0, 0%, 25%)

* 
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  // text-shadow: 0 1px 1px rgba(255,255,255,.3);
  // -webkit-font-smoothing: antialiased;
  // transform: translate3d(0, 0, 0)
  font-weight 400

body
  font-family $type
  color $type_dark
  margin 0
  padding 0
  font-size 2em

h1, h2, h3, h4, h5
  margin 0